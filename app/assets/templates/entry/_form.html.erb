<div class ='row row-centered'>
  <div class='col-sm-7 col-centered'>
    <div class = 'panel panel-primary'>
      <div id="notice">{{notice}}</div>
    </div>
  </div>
</div>
<form ng-init='init()' ng-submit="submit()" class="form-horizontal">

  <dynamic-form ng-model="ldapForm"
                template-url="requestUrl"
                object-url="requestObjUrl"
                label-class='col-sm-3 control-label'
                help-class='col-sm-1 btn btn-info btn-sm active'
                action-container-class = 'col-sm-3'
                remove-class = 'btn btn-danger btn-sm active'
                required-class = 'btn btn-warning btn-sm active''>
    <h1>Form is loading...</h1>
  </dynamic-form>
  <button type="submit" class="btn btn-primary active">Save Entry</button>

  <div class="col-md-12">
    <pre>ldapForm: {{ldapForm | pretty}}</pre>
  </div>
</form>
