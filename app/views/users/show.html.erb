<h1><%= "#{@users.uid.first.upcase} - Information Page" %></h1>

<%= button_to 'Edit', edit_user_path(@users.dn), :class => 'btn btn-warning', method: :get%>
<%= button_to 'Delete', user_path(@users.dn), :class => 'btn btn-danger', method: :get%>

<table class = "table">
  <tbody>
    <% @users.each do |attribute, value| %>
      <tr>
        <td class="col-md-3"><%= "#{attribute}:" %></td>
        <td> <ul> <% value.each do |val| %>
                  <li><%= val %></li>
          <% end %></ul></td>
      </tr>
    <% end %>
    <tr>
      <td class="col-md-3">Member of:</td>
      <td> <ul> <% @groups.each do |entry| %>
            <li><%= entry.dn %></li>
        <% end %></ul></td>
    </tr>
</table>

